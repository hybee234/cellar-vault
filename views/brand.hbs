<!-- Your existing content -->
{{!-- Template title --}}
<h1 class="flex items-center justify-center my-4 text-lg font-bold text-center md:text-2xl text-zinc-900">
    Select a brand from your &nbsp;<span class="text-[#722F37]">Cellar</span>
</h1>

{{!-- Brand heading --}}
<h2 class="font-semibold text-center underline text-zinc-900">Brands</h2>

<div id="brandListContainer">
    <ul class="p-0 mt-3 flex items-center justify-center">
        {{#each brands as |brand|}}
        <li class="relative m-2">
            <section class="card p-2 border-2 rounded-3xl border-emerald-400 bg-white dark:bg-slate-900">
                <a href="/wine/{{brand.brand_id}}" class="block p-2 text-center">
                    <header>{{brand.brand_name}}</header>
                </a>
            </section>
        </li>
        {{/each}}
    </ul>
</div>

<!-- Move the Master Dropdown to the top left with some spacing -->
<div class="my-4 ml-4 absolute top-0 left-0">
    <div class="master-dropdown">
        <button class="master-dropbtn">Select Action</button>
        <div class="master-dropdown-content hidden">
            <a href="#" class="deactivate-all-option">Deactivate All</a>
            <!-- Add individual deactivate options here -->
            {{#each brands as |brand|}}
            <a href="#" class="deactivate-individual-option" data-brand-id="{{brand.brand_id}}">Deactivate {{brand.brand_name}}</a>
            {{/each}}
        </div>
    </div>
</div>

<!-- Link to your dropdown CSS -->
<link rel="stylesheet" href="/css/dropdown.css">

<!-- Link to your JavaScript file -->
<script src="/js/brandInteraction.js"></script>
