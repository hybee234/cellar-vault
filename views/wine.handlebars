<main class="justify-center w-full text-center align-center"></main>

    <h1 class="flex items-center justify-center my-4 text-lg font-bold text-center md:text-2xl text-[#722F37]">  {{wines.1.brand.brand_name}} </h1>
    
    <h2 class="flex items-center justify-center my-4 text-lg font-bold text-center md:text-2xl text-[#722F37]">Wines and Vintages </h2>

    <h3 class="flex items-center justify-center my-4 text-lg font-semibold text-center md:text-xl text-zinc-900"> Select a vintage to view Transactions &nbsp; </h3>
    
    <ul class="p-0 mt-3 text-center ">
        {{#each wines as |wine|}}
            <div class="w-4/5 justify-center text-right align-center border-2 rounded-md mx-auto my-4 ">


                <div class="flex w-full item-center justify-between">
                    <div class="m-auto items-center justify-center my-0 text-lg font-bold text-center md:text-2xl text-[#722F37]">{{wine_name}}</div>                    
                    <div class="justify-start align-center">
                        <button class="edit p-1 fa-regular fa-pen-to-square" data-index = "{{wine_id}}" > {{wine_id}}</button>
                    </div>
                        <div class = "justify-start">
                        <button class="inactivate text-red-600 p-1 fa-regular fa-circle-xmark" data-index = "{{wine_id}}" > {{wine_id}}</button>
                    </div> 
                </div>
                <table id="wine-table" class="my-1 justify-center w-3/4 p-1 m-auto text-center border-2 border-[#722F37] rounded-md table-auto " >
                    <thead>
                        <tr>
                            <th><u>Vintage</u></th>
                            <th><u>Stock</u></th>
                            <th><u>Edit</u></th>
                            <th><u>Delete</u></th>
                            {{!-- <th><u>Vintage ID</u></th> --}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#each vintages}}
                        <tr>                
                            <th class="text-xs xl:text-base md:text-sm sm:text-xs p-2 "><a href="/transaction/{{vintage_id}}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-6 border border-blue-700 rounded my-5">{{vintage}}</a></th>
                            {{!-- <th class="text-xs font-normal xl:text-base md:text-sm sm:text-xs">{{vintage}}</th> --}}
                                                        <th class="text-xs font-normal xl:text-base md:text-sm sm:text-xs">{{vintage_total}}</th>               
                            <th>
                                <button data-index = "{{vintage_id}}" class="edit fa-regular fa-pen-to-square"></a>  
                            </th>
                            <th>
                                <button data-index = "{{vintage_id}}" class="text-red-600 inactivate fa-regular fa-circle-xmark"></a>  
                            </th>
                            {{!-- <th class="text-xs xl:text-base md:text-sm sm:text-xs p-2">{{vintage_id}}</th> --}}
                        </tr>
                        {{/each}} 
                        <th class="text-xs xl:text-base md:text-sm sm:text-xs p-2" > <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-6 border border-blue-700 rounded my-1" >Add Vintage, Wine ID: {{wine_id}} </button> </th>  
                    </tbody>        
                </table>                                  
            </div>
        {{/each}}        
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-6 border border-blue-700 rounded my-1" >Add Wine, Brand ID: ({{wines.1.brand.brand_id}}) </button>
    </ul>
</main>
