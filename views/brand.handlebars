{{! Template title }}
<h1 class="flex items-center justify-center my-4 text-lg font-bold text-center md:text-2xl text-zinc-900">
  Select a brand from your&nbsp;
  <span class="text-[#722F37]">Cellar</span>
</h1>

<div id="brandListContainer">
  <table class="table-auto p-1 border-2 text-center justify-center w-4/5 m-auto">
    <thead>
      <tr>
        <th><u>Brand Name</u></th>
        <th><u>Actions</u></th>
        <th><u>Deactivate</u></th>
      </tr>
    </thead>
    <tbody>
      {{#each brands as |brand|}}
        <tr>
          <td class="font-normal xl:text-base md:text-sm sm:text-xs text-xs">
            <a href="/wine/{{brand.brand_id}}">
              {{brand.brand_name}}
            </a>
          </td>
          <td>
            <button data-brand-id="{{brand.brand_id}}" class="edit fa-regular fa-pen-to-square"></button>
          </td>
          <td>
            <button data-brand-id="{{brand.brand_id}}" class="delete fa-regular fa-circle-xmark text-red-600"></button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Include the brandInteract.js script -->
<script src="/js/brandInteract.js"></script>
