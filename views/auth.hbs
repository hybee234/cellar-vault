<!-- Login/Sign Up Forms -->

<div
  class="flex items-center justify-center min-h-screen bg-white md:bg-zinc-300"
>
  <div
    class="flex flex-col w-full max-w-md border-2 rounded-lg shadow-lg md:flex-row md:max-w-4xl md:bg-zinc-200"
  >

    <!-- Login Form -->
    <div
      class="flex flex-col items-center justify-center w-full p-8 bg-white md:w-1/2 md:bg-transparent"
    >
      <h2 class="mb-6 text-2xl font-semibold text-zinc-700">Login</h2>
      <form action="/login" method="post" class="w-full max-w-xs space-y-4">
        <input
          type="text"
          placeholder="Username"
          name="username"
          class="w-full px-3 py-2 transition duration-300 ease-in-out border border-transparent rounded-xl hover:border-zinc-500 focus:outline-none focus:border-zinc-500"
          required
        />
        <input
          type="password"
          placeholder="Password"
          name="password"
          class="w-full px-3 py-2 transition duration-300 ease-in-out border border-transparent rounded-xl hover:border-zinc-500 focus:outline-none focus:border-zinc-500"
          required
        />
        <button
          type="submit"
          class="w-full px-4 py-2 transition duration-300 ease-in-out bg-blue-500 rounded-xl text-zinc-200 hover:bg-blue-600"
        >Login</button>
      </form>
    </div>

    <!-- Horizontal Divider for mobile -->
    <div class="block w-full h-px bg-zinc-300 md:hidden"></div>

    <!-- Vertical Divider for desktop -->
    <div class="hidden md:block md:w-px md:bg-zinc-300 md:self-stretch"></div>

    <!-- Signup Form -->
    <div
      class="flex flex-col items-center justify-center w-full p-8 bg-white md:w-1/2 md:bg-transparent"
    >
      <h2 class="mb-6 text-2xl font-semibold text-zinc-700">Sign Up</h2>
      <form action="/signup" method="post" class="w-full max-w-xs space-y-4">
        <input
          type="text"
          placeholder="Username"
          name="username"
          class="w-full px-3 py-2 transition duration-300 ease-in-out border border-transparent rounded-xl hover:border-zinc-500 focus:outline-none focus:border-zinc-500"
          required
        />
        <input
          type="email"
          placeholder="Email"
          name="email"
          class="w-full px-3 py-2 transition duration-300 ease-in-out border border-transparent rounded-xl hover:border-zinc-500 focus:outline-none focus:border-zinc-500"
          required
        />
        <input
          type="password"
          placeholder="Password"
          name="password"
          class="w-full px-3 py-2 transition duration-300 ease-in-out border border-transparent rounded-xl hover:border-zinc-500 focus:outline-none focus:border-zinc-500"
          required
        />
        <button
          type="submit"
          class="w-full px-4 py-2 transition duration-300 ease-in-out bg-blue-500 rounded-xl text-zinc-200 hover:bg-blue-600"
        >Sign Up</button>
      </form>
    </div>
  </div>
</div>