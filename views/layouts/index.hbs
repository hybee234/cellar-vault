<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Cellar Vault</title>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/tailwind.css" />
  </head>
  <body>
    {{! Navbar starts here  }}
    <nav class="bg-zinc-800">
      <div
        class="px-4 py-6 mx-auto md:px-6 lg:px-8 xl:max-w-7xl 2xl:max-w-[1536px]"
      >
        <div class="flex items-center justify-between h-16">
          <a
            href="/"
            class="text-xl font-bold text-zinc-100 lg:text-3xl 2xl:text-4xl"
          >Cellar Vault</a>

          {{! Navbar link container }}
          <div
            class="flex items-center justify-center space-x-4 md:space-x-6 lg:space-x-8 xl:space-x-10"
          >
            {{! Navbar links }}
            <a
              href="/"
              class="py-2 text-sm font-medium duration-200 ease-in-out rounded-md md:px-3 text-zinc-500 hover:text-zinc-100 md:text-base lg:text-lg xl:text-xl"
            >Home</a>

            {{! Conditionally render logout button if user is logged in }}
            {{#if logged_in}}
              <button
                id="logout-button"
                class="py-2 text-sm font-medium duration-200 ease-in-out rounded-md md:px-3 text-zinc-500 hover:text-zinc-100 md:text-base lg:text-lg xl:text-xl"
              >Logout</button>
            {{else}}
              <a
                href="/auth"
                class="py-2 text-sm font-medium duration-200 ease-in-out rounded-md md:px-3 text-zinc-500 hover:text-zinc-100 md:text-base lg:text-lg xl:text-xl"
              >Login/Sign Up</a>
            {{/if}}
          </div>
        </div>
      </div>
    </nav>

    {{{body}}}
    <script src="/js/logout.js"></script>
  </body>
</html>